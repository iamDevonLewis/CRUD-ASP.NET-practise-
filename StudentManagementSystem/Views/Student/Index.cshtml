@model IEnumerable<Student>;


<h1>Student Page</h1>
<a asp-controller="Student" asp-action="Create">Create</a>

<table class="table table-bordered table striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Date Created</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
           <tr>
               <td width="5%">@obj.Id</td>
               <td width="15%">@obj.FirstName</td>
                <td width="15%">@obj.LastName</td>
                <td width="15%">@obj.Email</td>
                <td width="5%">@obj.Age</td>
                <td width="15%">@obj.CreateDateTime</td>
                <td width="20%">
                    <div class="btn-group" role="group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
           </tr> 
        }
        

    </tbody>
</table>